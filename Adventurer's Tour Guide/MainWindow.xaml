<Window x:Class="Adventurer_Tour_Guide.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Adventurer_Tour_Guide"
        mc:Ignorable="d"
        Title="Adventurer's Tour Guide" Height="350" Width="525" ResizeMode="NoResize">
    <Grid Background="#FF3E2F07">
        <ComboBox x:Name="ComBox_EntryList" Margin="10,64,288,0" Height="22" VerticalAlignment="Top"/>
        <Button x:Name="But_Add" Content="Add Entry" Margin="10,159,288,0" Height="20" VerticalAlignment="Top" Click="But_Add_Click"/>
        <Button x:Name="But_Edit" Content="Edit Entry" Margin="10,184,288,0" Height="20" VerticalAlignment="Top" Click="But_Edit_Click"/>
        <Button x:Name="But_Delete" Content="Delete Entry" Margin="10,209,288,0" Height="20" VerticalAlignment="Top"/>
        <TextBlock x:Name="texBlock_EntryTitle" Margin="236,10,10,0" TextWrapping="Wrap" Text="TextBlock" FontSize="32" Height="43" VerticalAlignment="Top"/>
        <TextBox x:Name="texBox_Description" Margin="236,64,10,183" TextWrapping="Wrap" Text="N/A"/>
        <TextBox x:Name="texBox_Details" Margin="236,159,10,10" TextWrapping="Wrap"/>

    </Grid>
</Window>
